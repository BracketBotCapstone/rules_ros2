""" Builds rcl_logging.
"""

load("@com_github_mvukov_rules_ros2//ros2:cc_defs.bzl", "ros2_cpp_library")

ros2_cpp_library(
    name = "rcl_logging_spdlog",
    hdrs = glob(["rcl_logging_spdlog/include/**/*.h", "rcl_logging_interface/include/**/*.h"]),
    includes = ["rcl_logging_spdlog/include", "rcl_logging_interface/include"],
    srcs = glob(["rcl_logging_spdlog/src/*.cpp", "rcl_logging_interface/src/*.c"]),
    copts = ["-std=c++14"],
    includes = ["rcl_logging_spdlog/include"],
    visibility = ["//visibility:public"],
    deps = [
        "@ros2_rcpputils//:rcpputils",
        "@ros2_rcutils//:rcutils",
        "@spdlog",
    ],
)
